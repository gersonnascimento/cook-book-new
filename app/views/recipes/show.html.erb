<div class="text-center">
	<section>
		<h1><%=@arecipe.title%><small>(<%=@arecipe.user.email%>)</small></h1>
<h3>Detalhes</h3>
<p><%=@arecipe.recipe_type.name%></p>
<p><%=@arecipe.cuisine.name%></p>
<p><%=@arecipe.difficulty%></p>
<p><%="#{@arecipe.cook_time} minutos"%></p>

<%=link_to 'Editar', edit_recipe_path(@arecipe.id) if current_user == @arecipe.user%>
<%=link_to 'Voltar', root_path%>
<%if @arecipe.user == current_user%>
<%=link_to 'Excluir', recipe_path(@arecipe), method: :delete, data: {confirm: "Tem certeza que deseja excluir #{@arecipe.title}?"} %>
<%end%>
<%if user_signed_in? %>
<%if Favorite.where(recipe_id: "#{@arecipe.id}", user_id: current_user.id).any?%>
Favorita!
<% else %>
<%=link_to 'Adicionar aos favoritos', "/favorite/#{@arecipe.id}/"%>
<%end%>
<%end%>
