<!DOCTYPE html>
  <body>
  <div class="container" style="back: 25px;">
  <div class="row">
  <div class="col-sm-4"></div>
  <div class="col-sm-4"><h1>CookBook</h1>
      <p>Bem-vindo ao maior livro de receitas online</p></div>
      <div class="col-sm-4"></div>
      </div>
      </div>
  <section>
    <h2>Cozinhas</h2>
    <%@cuisines.each do |cuisine|%>
      <article>
       <%=link_to cuisine.name, cuisine_path(cuisine.id)%><br>
      </article>
    <%end%>
  </section>

  <section>
    <h2>Receitas</h2>
    <%@recipe_types.each do |type|%>
      <%=link_to type.name, recipe_type_path(type.id)%><br>
    <%end%>
    <% @recipes.each do |recipe|%>
      <h1><%= link_to recipe.title, recipe_path(recipe.id)%></h1>
      <li><%=recipe.recipe_type.name%></li>
      <li><%=recipe.cuisine.name %></li>
      <li><%=recipe.difficulty%></li>
      <li><%="#{recipe.cook_time} minutos"%></li>
    <%end%>
  </section>

  <%=link_to 'Enviar uma receita', new_recipe_path%>
  </body>
</html>

