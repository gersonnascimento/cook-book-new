  
  <div style="margin-top: 25px">
  <div class="row">
  <%=render 'shared/side_menu'%>
  
  <section class="col-sm-5 text-center">
    <h1>Receitas</h1>
    <% @recipes.each do |recipe|%>
    <section>
	    <h1><%= link_to recipe.title, recipe_path(recipe.id)%><small>(<%=recipe.user.email%>)</small></h1>
      <li><%=recipe.recipe_type.name%></li>
      <li><%=recipe.cuisine.name %></li>
      <li><%=recipe.difficulty%></li>
      <li><%="#{recipe.cook_time} minutos"%></li>
      </section>
    <%end%>
    <%unless @recipes == Recipe.all%>
    <%=link_to 'Todas Receitas', '/recipes/all'%>
    <%else%>
    <%=link_to 'Apenas mais recentes', root_path%>
    <%end%>
  </section>



  <section class="col-sm-5 text-center">
    <h1>Favoritas</h1> <!-- nada por enquanto-->
    <% if @frecipes%>
    <% @frecipes.each do |recipe|%>
    <section>
      <h2><%= recipe.title%><small>(<%=recipe.user.email%>)</small></h2>
      <li><%=recipe.recipe_type.name%></li>
      <li><%=recipe.cuisine.name %></li>
      <li><%=recipe.difficulty%></li>
      <li><%="#{recipe.cook_time} minutos"%></li>
      </section>
    <%end%>
    <%end%>
    
  </section>


  </div>
  </div>

