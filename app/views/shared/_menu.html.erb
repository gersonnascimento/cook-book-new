<div class="container">
	<div class="row">
		<div class="col-md-4 col-sm-4"><h4><span class="glyphicon glyphicon-earphone">8888-8888</span></h4></div>
		<div class="col-md-4 col-sm-4 text-center form-inline">
			<%= form_tag(search_recipes_path, method: "get") do %>
				<%= text_field_tag :word, '', class: "form-control", placeholder:'Busca' %>
				<%= submit_tag "Buscar", class: "btn btn-primary" %>
			<% end %>
		</div>
		<div class="col-md-4 col-sm-4 text-right">
			<% if user_signed_in? %>
				<h4>Bem vindo(a) <%=current_user.email%></h4>
			<%end%>
		</div>
	</div>
	<div class="row" style="margin-top: 20px;background-color: orange;">
		<div class="col-md-4 col-sm-5">
			<div class="logo">
				<a href="<%=root_path%>">
					<h1>
						<img  src="images/social_logo.png" alt="logo">
						CookBook
					</h1>
					<p>Bem-vindo ao maior livro de receitas online</p>
				</a>
			</div>
		</div>
		<div id="navbar5" class="navbar-collapse collapse">
			<ul class="nav navbar-nav navbar-right">
				<li>
					<img src="images/entrar.png" alt="login" class="img-responsive img-rounded img-menu">	
					<%=link_to 'Entrar', new_user_session_path%></li>
				<li><%= link_to 'Início', root_path%></li>
				<li><%= link_to 'Minhas Receitas', mine_recipes_path%></li>
				<li><%= link_to 'Enviar uma receita', new_recipe_path%></li>
				<li><%= link_to 'Sair', destroy_user_session_path, method: :delete %></li>  <!-- não tem login ainda-->
			</ul>
		</div>
	</div>
	<!--/.nav-collapse -->
</div>
